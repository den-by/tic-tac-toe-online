{
  "private": true,
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "init": "npm run infrastructure:up  &&  npm run prisma:generate && npm run prisma:push",
    "clean": "npm run infrastructure:down && rimraf -- dist coverage",
    "build": "nest build",
    "infrastructure:up": "docker-compose -f docker-compose.yml up -d && wait-on -d 10000 tcp:3306 ",
    "infrastructure:down": "docker-compose -f docker-compose.yml down --volumes --rmi all --remove-orphans",
    "start:prod": "node dist/main",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "lint:all": "npx lint-staged",
    "eslint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "jest --config ./test/jest.config.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma-case-format": "prisma-case-format --map-table-case=snake,plural --map-field-case=snake,singular"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.2.10",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/websockets": "^10.2.10",
    "@prisma/client": "5.7.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "lodash": "^4.17.21",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.0",
    "prisma": "^5.7.1",
    "prisma-case-format": "^2.0.2",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run eslint:fix"
    ],
    "*schema.prisma": [
      "prisma-case-format"
    ]
  }
}
